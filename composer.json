{
    "name": "riya-collections/php-backend",
    "description": "Riya Collections PHP Backend",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "firebase/php-jwt": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "fakerphp/faker": "^1.20"
    },
    "autoload": {
        "psr-4": {
            "RiyaCollections\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RiyaCollections\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}