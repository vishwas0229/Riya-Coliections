# Riya Collections PHP Backend - Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Configuration
APP_NAME="Riya Collections"
APP_ENV=development
APP_DEBUG=true
APP_URL=https://riyacollections.com
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_VERSION=1.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=riya_collections
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_CONNECTION_LIMIT=10

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production_minimum_32_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_token_secret_here_change_in_production
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=riya-collections
JWT_AUDIENCE=riya-collections-users

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Company Email Settings
COMPANY_NAME="Riya Collections"
COMPANY_EMAIL=orders@riyacollections.com
SUPPORT_EMAIL=support@riyacollections.com
WEBSITE_URL=https://riyacollections.com
LOGO_URL=https://riyacollections.com/assets/logo.png

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret
RAZORPAY_CURRENCY=INR

# File Upload Configuration
UPLOAD_PATH=uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
IMAGE_QUALITY=85
MAX_IMAGE_WIDTH=1920
MAX_IMAGE_HEIGHT=1080

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your_session_secret_here_change_in_production
ALLOWED_ORIGINS=https://riyacollections.com,https://www.riyacollections.com,http://localhost:3000

# PHP Configuration
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=30
PHP_MAX_INPUT_TIME=30

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_FILES=10
LOG_MAX_SIZE=10MB
LOG_DAILY_ROTATION=true
LOG_FORMAT=json

# Development Settings (only for development environment)
# Set APP_ENV=production for production deployment
FRONTEND_URL=http://localhost:3000