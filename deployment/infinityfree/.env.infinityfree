# Riya Collections - InfinityFree Environment Configuration
# Copy this file to .env and update the values for your InfinityFree hosting

# Application Configuration
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com

# Database Configuration (Update with your InfinityFree database details)
# Get these from your InfinityFree control panel -> MySQL Databases
DB_HOST=sqlXXX.infinityfree.com
DB_PORT=3306
DB_NAME=epiz_XXXXXXXX_riya_collections
DB_USER=epiz_XXXXXXXX
DB_PASSWORD=your_database_password_from_infinityfree

# JWT Configuration (IMPORTANT: Generate strong secrets)
# Use a secure random string generator for production
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_32_PLUS_CHARACTER_SECRET_KEY
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=CHANGE_THIS_TO_A_DIFFERENT_SECURE_SECRET_KEY
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=riya-collections
JWT_AUDIENCE=riya-collections-users

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# Security
FORCE_HTTPS=true
VALID_API_KEYS=

# Email Configuration (Configure with your email provider)
# For Gmail, use App Passwords: https://support.google.com/accounts/answer/185833
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-business-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="Riya Collections"

# Razorpay Configuration (Get from Razorpay Dashboard)
RAZORPAY_KEY_ID=rzp_live_XXXXXXXXXXXXXXXX
RAZORPAY_KEY_SECRET=your_razorpay_secret_key
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_from_razorpay

# InfinityFree Optimization Settings
# These help optimize for InfinityFree's resource limits
MAX_FILE_SIZE=2097152
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
IMAGE_QUALITY=80
MAX_IMAGE_WIDTH=1200
MAX_IMAGE_HEIGHT=800

# Logging (Minimal for shared hosting)
LOG_LEVEL=error
LOG_MAX_FILES=5

# Performance Settings
CACHE_ENABLED=true
OPTIMIZE_IMAGES=true
COMPRESS_RESPONSES=true