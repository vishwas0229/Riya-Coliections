# Riya Collections PHP Backend - InfinityFree Environment Configuration
# Copy this file to .env and update the values for your InfinityFree hosting

# Application Configuration
APP_NAME="Riya Collections"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_TIMEZONE=Asia/Kolkata
APP_LOCALE=en
APP_VERSION=1.0.0

# Database Configuration (Update with your InfinityFree database details)
# Get these from your InfinityFree control panel -> MySQL Databases
DB_HOST=sqlXXX.infinityfree.com
DB_PORT=3306
DB_NAME=epiz_XXXXXXXX_riya_collections
DB_USER=epiz_XXXXXXXX
DB_PASSWORD=your_database_password_from_infinityfree
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_CONNECTION_LIMIT=5

# JWT Configuration (IMPORTANT: Generate strong secrets)
# Use a secure random string generator for production
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_32_PLUS_CHARACTER_SECRET_KEY
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=CHANGE_THIS_TO_A_DIFFERENT_SECURE_SECRET_KEY
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=riya-collections
JWT_AUDIENCE=riya-collections-users

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# Email Configuration (Configure with your email provider)
# For Gmail, use App Passwords: https://support.google.com/accounts/answer/185833
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-business-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password

# Company Email Settings
COMPANY_NAME="Riya Collections"
COMPANY_EMAIL=orders@your-domain.com
SUPPORT_EMAIL=support@your-domain.com
WEBSITE_URL=https://your-domain.com
LOGO_URL=https://your-domain.com/assets/logo.png

# Razorpay Configuration (Get from Razorpay Dashboard)
RAZORPAY_KEY_ID=rzp_live_XXXXXXXXXXXXXXXX
RAZORPAY_KEY_SECRET=your_razorpay_secret_key
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_from_razorpay
RAZORPAY_CURRENCY=INR

# File Upload Configuration (Optimized for InfinityFree)
UPLOAD_PATH=uploads
MAX_FILE_SIZE=2097152
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
IMAGE_QUALITY=80
MAX_IMAGE_WIDTH=1200
MAX_IMAGE_HEIGHT=800

# Security Configuration (Adjusted for shared hosting)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50
SESSION_SECRET=CHANGE_THIS_TO_A_SECURE_SESSION_SECRET
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# PHP Configuration (InfinityFree optimized)
PHP_MEMORY_LIMIT=128M
PHP_MAX_EXECUTION_TIME=30
PHP_MAX_INPUT_TIME=30

# Logging Configuration (Minimal for shared hosting)
LOG_LEVEL=error
LOG_FILE=logs/app.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=5MB
LOG_DAILY_ROTATION=true
LOG_FORMAT=simple

# InfinityFree Specific Settings
# These help optimize for InfinityFree's resource limits
CACHE_ENABLED=true
CACHE_TTL=3600
DB_QUERY_CACHE=true
OPTIMIZE_IMAGES=true
COMPRESS_RESPONSES=true

# Frontend Configuration
FRONTEND_URL=https://your-domain.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=backups

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
PERFORMANCE_MONITORING=false
ERROR_REPORTING_EMAIL=admin@your-domain.com

# Development Settings (Keep false for production)
ENABLE_CORS_ALL=false
ENABLE_DEBUG_TOOLBAR=false
SHOW_ERROR_DETAILS=false