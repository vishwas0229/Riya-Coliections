{
  "name": "riya-collections-backend",
  "version": "1.0.0",
  "description": "Backend API for Riya Collections e-commerce platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "build": "node ../scripts/build.js --env=production",
    "build:staging": "node ../scripts/build.js --env=staging",
    "build:dev": "node ../scripts/build.js --env=development",
    "build:clean": "node ../scripts/build.js --env=production --clean",
    "env:validate": "node ../scripts/env-manager.js validate",
    "env:validate:prod": "node ../scripts/env-manager.js validate --env=production",
    "env:validate:staging": "node ../scripts/env-manager.js validate --env=staging",
    "env:generate": "node ../scripts/env-manager.js generate",
    "env:check-secrets": "node ../scripts/env-manager.js check-secrets",
    "env:generate-secrets": "node ../scripts/env-manager.js generate-secrets",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "TEST_VERBOSE=true jest --verbose",
    "test:db": "USE_REAL_DB=true jest",
    "test:db:clean": "USE_REAL_DB=true CLEAN_DB_BEFORE_EACH=true jest",
    "test:property": "jest --testNamePattern='Property:'",
    "test:unit": "jest --testNamePattern='Unit:'",
    "test:integration": "jest --testNamePattern='Integration:'",
    "test:setup": "node tests/setup-test-env.js setup",
    "test:cleanup": "node tests/setup-test-env.js cleanup",
    "test:validate": "node tests/setup-test-env.js validate",
    "test:demo": "jest tests/framework-demo.test.js",
    "migrate": "node migrations/run_migrations.js",
    "migrate:status": "node migrations/run_migrations.js status",
    "migrate:validate": "node migrations/validate_sql.js"
  },
  "keywords": [
    "ecommerce",
    "cosmetics",
    "api",
    "nodejs",
    "express"
  ],
  "author": "Riya Collections",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.4",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "form-data": "^4.0.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "nodemailer": "^6.9.7",
    "razorpay": "^2.9.2",
    "redis": "^4.6.10",
    "sharp": "^0.34.5",
    "validator": "^13.15.26",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
