{
  "name": "riya-collections",
  "version": "1.0.0",
  "description": "Modern e-commerce platform for cosmetics and beauty products",
  "main": "backend/server.js",
  "scripts": {
    "start": "cd backend && npm start",
    "dev": "concurrently \"cd backend && npm run dev\" \"cd frontend && npm start\"",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "node scripts/build.js",
    "deploy": "node scripts/deploy.js",
    "clean": "rimraf dist .build-temp",
    "lint": "eslint backend/**/*.js frontend/src/**/*.js",
    "format": "prettier --write backend/**/*.js frontend/src/**/*.js"
  },
  "keywords": [
    "ecommerce",
    "cosmetics",
    "nodejs",
    "express",
    "mysql",
    "javascript"
  ],
  "author": "Riya Collections",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  }
}