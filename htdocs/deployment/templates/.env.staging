# Riya Collections PHP Backend - Staging Environment Configuration
# This template is for staging/testing environments

# Application Configuration
APP_NAME="Riya Collections (Staging)"
APP_ENV=staging
APP_DEBUG=true
APP_URL=https://staging.your-domain.com
APP_TIMEZONE=Asia/Kolkata
APP_LOCALE=en
APP_VERSION=1.0.0-staging

# Database Configuration
# Use separate staging database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=riya_collections_staging
DB_USER=your_staging_db_user
DB_PASSWORD=your_staging_db_password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_CONNECTION_LIMIT=5

# JWT Configuration
# Use different secrets from production
JWT_SECRET=staging_jwt_secret_key_minimum_32_characters_long
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=staging_refresh_secret_key_different_from_jwt
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=riya-collections-staging
JWT_AUDIENCE=riya-collections-staging-users

# Password Hashing
BCRYPT_SALT_ROUNDS=10

# Email Configuration
# Use test email service or sandbox
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=your_mailtrap_username
SMTP_PASSWORD=your_mailtrap_password

# Company Email Settings
COMPANY_NAME="Riya Collections (Staging)"
COMPANY_EMAIL=staging-orders@your-domain.com
SUPPORT_EMAIL=staging-support@your-domain.com
WEBSITE_URL=https://staging.your-domain.com
LOGO_URL=https://staging.your-domain.com/assets/logo.png

# Razorpay Configuration
# Use TEST credentials for staging
RAZORPAY_KEY_ID=rzp_test_XXXXXXXXXXXXXXXX
RAZORPAY_KEY_SECRET=your_test_razorpay_secret_key
RAZORPAY_WEBHOOK_SECRET=your_test_webhook_secret
RAZORPAY_CURRENCY=INR

# File Upload Configuration
UPLOAD_PATH=uploads
MAX_FILE_SIZE=2097152
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
IMAGE_QUALITY=75
MAX_IMAGE_WIDTH=1200
MAX_IMAGE_HEIGHT=800

# Security Configuration (Relaxed for testing)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
SESSION_SECRET=staging_session_secret_key
ALLOWED_ORIGINS=https://staging.your-domain.com,http://localhost:3000,http://localhost:8080

# PHP Configuration
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=60
PHP_MAX_INPUT_TIME=60

# Logging Configuration (More verbose for debugging)
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=5MB
LOG_DAILY_ROTATION=true
LOG_FORMAT=detailed

# Development Features (Enabled for staging)
CACHE_ENABLED=false
CACHE_TTL=300
DB_QUERY_CACHE=false
OPTIMIZE_IMAGES=false
COMPRESS_RESPONSES=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=backups

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
PERFORMANCE_MONITORING=true
ERROR_REPORTING_EMAIL=dev-team@your-domain.com

# Development Settings (Enabled for staging)
ENABLE_CORS_ALL=true
ENABLE_DEBUG_TOOLBAR=true
SHOW_ERROR_DETAILS=true
FORCE_HTTPS=false
SECURE_COOKIES=false

# Frontend Configuration
FRONTEND_URL=https://staging.your-domain.com

# Testing Configuration
ENABLE_TEST_ROUTES=true
MOCK_EXTERNAL_SERVICES=false
SEED_TEST_DATA=true