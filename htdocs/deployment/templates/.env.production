# Riya Collections PHP Backend - Production Environment Configuration
# This template is for general production hosting environments

# Application Configuration
APP_NAME="Riya Collections"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-production-domain.com
APP_TIMEZONE=Asia/Kolkata
APP_LOCALE=en
APP_VERSION=1.0.0

# Database Configuration
# Update with your production database credentials
DB_HOST=localhost
DB_PORT=3306
DB_NAME=riya_collections_prod
DB_USER=your_production_db_user
DB_PASSWORD=your_secure_production_db_password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_CONNECTION_LIMIT=10

# JWT Configuration
# CRITICAL: Generate strong, unique secrets for production
# Use: openssl rand -base64 32
JWT_SECRET=REPLACE_WITH_SECURE_32_PLUS_CHARACTER_SECRET_KEY_FOR_PRODUCTION
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=REPLACE_WITH_DIFFERENT_SECURE_SECRET_KEY_FOR_REFRESH_TOKENS
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=riya-collections
JWT_AUDIENCE=riya-collections-users

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# Email Configuration
# Configure with your production email service
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-production-email@your-domain.com
SMTP_PASSWORD=your-secure-email-password

# Company Email Settings
COMPANY_NAME="Riya Collections"
COMPANY_EMAIL=orders@your-domain.com
SUPPORT_EMAIL=support@your-domain.com
WEBSITE_URL=https://your-domain.com
LOGO_URL=https://your-domain.com/assets/logo.png

# Razorpay Configuration
# Use LIVE credentials for production
RAZORPAY_KEY_ID=rzp_live_XXXXXXXXXXXXXXXX
RAZORPAY_KEY_SECRET=your_live_razorpay_secret_key
RAZORPAY_WEBHOOK_SECRET=your_live_webhook_secret
RAZORPAY_CURRENCY=INR

# File Upload Configuration
UPLOAD_PATH=uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
IMAGE_QUALITY=85
MAX_IMAGE_WIDTH=1920
MAX_IMAGE_HEIGHT=1080

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=REPLACE_WITH_SECURE_SESSION_SECRET_FOR_PRODUCTION
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# PHP Configuration
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=30
PHP_MAX_INPUT_TIME=30

# Logging Configuration
LOG_LEVEL=error
LOG_FILE=logs/app.log
LOG_MAX_FILES=10
LOG_MAX_SIZE=10MB
LOG_DAILY_ROTATION=true
LOG_FORMAT=json

# Production Optimizations
CACHE_ENABLED=true
CACHE_TTL=3600
DB_QUERY_CACHE=true
OPTIMIZE_IMAGES=true
COMPRESS_RESPONSES=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
PERFORMANCE_MONITORING=true
ERROR_REPORTING_EMAIL=admin@your-domain.com

# Security Settings (Production)
ENABLE_CORS_ALL=false
ENABLE_DEBUG_TOOLBAR=false
SHOW_ERROR_DETAILS=false
FORCE_HTTPS=true
SECURE_COOKIES=true

# Frontend Configuration
FRONTEND_URL=https://your-domain.com