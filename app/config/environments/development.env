# Riya Collections - Development Environment Configuration
# This file contains development-specific settings for local development

# Application Configuration
APP_NAME="Riya Collections (Development)"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_VERSION=1.0.0-dev
MAINTENANCE_MODE=false

# Database Configuration - Local Development
DB_HOST=localhost
DB_PORT=3306
DB_NAME=riya_collections_dev
DB_USER=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_CONNECTION_LIMIT=5

# JWT Configuration - Development Keys (Not for production!)
JWT_SECRET=development_jwt_secret_key_minimum_32_characters_long_not_for_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=development_refresh_secret_key_different_from_jwt_not_for_production
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=riya-collections-dev
JWT_AUDIENCE=riya-collections-dev-users

# Password Hashing - Lower rounds for faster development
BCRYPT_SALT_ROUNDS=8

# Email Configuration - Development (Use Mailtrap or similar)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=your_mailtrap_username
SMTP_PASSWORD=your_mailtrap_password

# Company Email Settings - Development
COMPANY_NAME="Riya Collections (Dev)"
COMPANY_EMAIL=dev-orders@localhost
SUPPORT_EMAIL=dev-support@localhost
WEBSITE_URL=http://localhost
LOGO_URL=http://localhost/assets/images/logo.png

# Razorpay Configuration - Test Mode
RAZORPAY_KEY_ID=rzp_test_XXXXXXXXXXXXXXXX
RAZORPAY_KEY_SECRET=your_test_razorpay_secret_key
RAZORPAY_WEBHOOK_SECRET=your_test_webhook_secret
RAZORPAY_CURRENCY=INR
RAZORPAY_TEST_MODE=true

# File Upload Configuration - Development
UPLOAD_PATH=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,webp,gif
IMAGE_QUALITY=75
MAX_IMAGE_WIDTH=2048
MAX_IMAGE_HEIGHT=2048
UPLOAD_SCAN_SECURITY=false
UPLOAD_VIRUS_SCAN=false
UPLOAD_MAX_FILES=20

# Security Configuration - Relaxed for development
RATE_LIMITING_ENABLED=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
SESSION_SECRET=development_session_secret_not_for_production
ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000
FORCE_HTTPS=false
SECURE_COOKIES=false

# PHP Configuration - Development
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=120
PHP_MAX_INPUT_TIME=120

# Logging Configuration - Verbose for development
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=10MB
LOG_DAILY_ROTATION=true
LOG_FORMAT=detailed
LOG_ASSET_REQUESTS=true

# Asset Configuration - Development optimized
ENABLE_ASSET_COMPRESSION=false
COMPRESSION_LEVEL=1
COMPRESSION_MIN_SIZE=1024
COMPRESSIBLE_TYPES=text/css,application/javascript,text/html,application/json,image/svg+xml
ENABLE_ASSET_CACHING=false
ASSET_CACHE_DURATION=0
ENABLE_ETAG=false
ENABLE_LAST_MODIFIED=false
MAX_ASSET_SIZE=104857600
ASSET_ALLOWED_DIRS=public/assets,public/uploads,public/pages
ASSET_BLOCKED_EXTENSIONS=php,exe,bat,sh,py
ENABLE_RANGE_REQUESTS=true

# Development Features - Enabled
CACHE_ENABLED=false
CACHE_TTL=60
DB_QUERY_CACHE=false
OPTIMIZE_IMAGES=false
COMPRESS_RESPONSES=false
ENABLE_CORS_ALL=true
ENABLE_DEBUG_TOOLBAR=true
SHOW_ERROR_DETAILS=true

# Backup Configuration - Development
BACKUP_ENABLED=false
BACKUP_RETENTION_DAYS=3
BACKUP_PATH=storage/backups

# Monitoring Configuration - Development
HEALTH_CHECK_ENABLED=true
PERFORMANCE_MONITORING=false
ERROR_REPORTING_EMAIL=dev@localhost

# Frontend Configuration - Development
FRONTEND_URL=http://localhost:3000

# Testing Configuration - Development
ENABLE_TEST_ROUTES=true
MOCK_EXTERNAL_SERVICES=true
SEED_TEST_DATA=true

# Development Database Seeding
DB_SEED_USERS=true
DB_SEED_PRODUCTS=true
DB_SEED_CATEGORIES=true
DB_SEED_ORDERS=false

# Development API Configuration
API_RATE_LIMIT_BYPASS=true
API_DETAILED_ERRORS=true
API_CORS_DEBUG=true

# Development Asset Versioning
ASSET_VERSIONING_ENABLED=false
ASSET_VERSION_STRATEGY=timestamp

# Development Security - Relaxed
CSRF_PROTECTION=false
SQL_INJECTION_PROTECTION=true
XSS_PROTECTION=true
CLICKJACKING_PROTECTION=false

# Development Performance
QUERY_LOGGING=true
SLOW_QUERY_THRESHOLD=1000
MEMORY_USAGE_LOGGING=true