# Riya Collections - Production Environment Configuration
# This file contains production-specific settings for live deployment
# IMPORTANT: Update all placeholder values before deploying to production

# Application Configuration
APP_NAME="Riya Collections"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://riyacollections.com
APP_TIMEZONE=Asia/Kolkata
APP_LOCALE=en
APP_VERSION=1.0.0
MAINTENANCE_MODE=false

# Database Configuration - Production Database
# CRITICAL: Update with your production database credentials
DB_HOST=localhost
DB_PORT=3306
DB_NAME=riya_collections_prod
DB_USER=CHANGE_ME_PRODUCTION_DB_USER
DB_PASSWORD=CHANGE_ME_SECURE_PRODUCTION_DB_PASSWORD
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_CONNECTION_LIMIT=15

# JWT Configuration - Production Keys
# CRITICAL: Generate strong, unique secrets for production
# Use: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_32_PLUS_CHARACTER_SECRET_KEY_FOR_PRODUCTION
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=CHANGE_ME_GENERATE_DIFFERENT_SECURE_SECRET_KEY_FOR_REFRESH_TOKENS
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=riya-collections
JWT_AUDIENCE=riya-collections-users

# Password Hashing - Maximum security
BCRYPT_SALT_ROUNDS=12

# Email Configuration - Production SMTP
# CRITICAL: Configure with your production email service
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=CHANGE_ME_PRODUCTION_EMAIL_USERNAME
SMTP_PASSWORD=CHANGE_ME_SECURE_EMAIL_PASSWORD

# Company Email Settings - Production
COMPANY_NAME="Riya Collections"
COMPANY_EMAIL=orders@riyacollections.com
SUPPORT_EMAIL=support@riyacollections.com
WEBSITE_URL=https://riyacollections.com
LOGO_URL=https://riyacollections.com/assets/images/logo.png

# Razorpay Configuration - Live Mode
# CRITICAL: Use LIVE credentials for production
RAZORPAY_KEY_ID=CHANGE_ME_LIVE_RAZORPAY_KEY_ID
RAZORPAY_KEY_SECRET=CHANGE_ME_LIVE_RAZORPAY_SECRET_KEY
RAZORPAY_WEBHOOK_SECRET=CHANGE_ME_LIVE_WEBHOOK_SECRET
RAZORPAY_CURRENCY=INR
RAZORPAY_TEST_MODE=false

# File Upload Configuration - Production (Secure and optimized)
UPLOAD_PATH=uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,webp
IMAGE_QUALITY=85
MAX_IMAGE_WIDTH=1920
MAX_IMAGE_HEIGHT=1080
UPLOAD_SCAN_SECURITY=true
UPLOAD_VIRUS_SCAN=true
UPLOAD_MAX_FILES=10

# Security Configuration - Maximum security
RATE_LIMITING_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=CHANGE_ME_GENERATE_SECURE_SESSION_SECRET_FOR_PRODUCTION
ALLOWED_ORIGINS=https://riyacollections.com,https://www.riyacollections.com
FORCE_HTTPS=true
SECURE_COOKIES=true

# PHP Configuration - Production optimized
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=30
PHP_MAX_INPUT_TIME=30

# Logging Configuration - Production (Minimal but effective)
LOG_LEVEL=error
LOG_FILE=logs/app.log
LOG_MAX_FILES=30
LOG_MAX_SIZE=10MB
LOG_DAILY_ROTATION=true
LOG_FORMAT=json
LOG_ASSET_REQUESTS=false

# Asset Configuration - Production optimized
ENABLE_ASSET_COMPRESSION=true
COMPRESSION_LEVEL=9
COMPRESSION_MIN_SIZE=1024
COMPRESSIBLE_TYPES=text/css,application/javascript,text/html,application/json,image/svg+xml
ENABLE_ASSET_CACHING=true
ASSET_CACHE_DURATION=86400
ENABLE_ETAG=true
ENABLE_LAST_MODIFIED=true
MAX_ASSET_SIZE=52428800
ASSET_ALLOWED_DIRS=public/assets,public/uploads,public/pages
ASSET_BLOCKED_EXTENSIONS=php,exe,bat,sh,py,pl,cgi
ENABLE_RANGE_REQUESTS=true

# Production Optimizations - Maximum performance
CACHE_ENABLED=true
CACHE_TTL=3600
DB_QUERY_CACHE=true
OPTIMIZE_IMAGES=true
COMPRESS_RESPONSES=true
ENABLE_CORS_ALL=false
ENABLE_DEBUG_TOOLBAR=false
SHOW_ERROR_DETAILS=false

# Backup Configuration - Production
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=storage/backups

# Monitoring Configuration - Production
HEALTH_CHECK_ENABLED=true
PERFORMANCE_MONITORING=true
ERROR_REPORTING_EMAIL=CHANGE_ME_ADMIN_EMAIL_FOR_ALERTS

# Frontend Configuration - Production
FRONTEND_URL=https://riyacollections.com

# Production Security - Disabled testing features
ENABLE_TEST_ROUTES=false
MOCK_EXTERNAL_SERVICES=false
SEED_TEST_DATA=false

# Production Database Configuration
DB_SEED_USERS=false
DB_SEED_PRODUCTS=false
DB_SEED_CATEGORIES=false
DB_SEED_ORDERS=false

# Production API Configuration
API_RATE_LIMIT_BYPASS=false
API_DETAILED_ERRORS=false
API_CORS_DEBUG=false

# Production Asset Versioning
ASSET_VERSIONING_ENABLED=true
ASSET_VERSION_STRATEGY=hash

# Production Security - Maximum protection
CSRF_PROTECTION=true
SQL_INJECTION_PROTECTION=true
XSS_PROTECTION=true
CLICKJACKING_PROTECTION=true

# Production Performance - Minimal logging
QUERY_LOGGING=false
SLOW_QUERY_THRESHOLD=5000
MEMORY_USAGE_LOGGING=false

# SSL Configuration - Production
SSL_VERIFY_PEER=true
SSL_VERIFY_HOST=true
SSL_CAINFO_PATH=/etc/ssl/certs/ca-certificates.crt

# Production Security Headers
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true
CSP_ENABLED=true
CSP_REPORT_ONLY=false

# External Service Configuration - Production
EXTERNAL_API_TIMEOUT=15
EXTERNAL_API_RETRIES=2
EXTERNAL_API_CACHE_TTL=1800

# Production Monitoring and Alerts
UPTIME_MONITORING=true
ERROR_THRESHOLD_ALERT=10
PERFORMANCE_THRESHOLD_MS=2000
DISK_USAGE_ALERT_THRESHOLD=85
MEMORY_USAGE_ALERT_THRESHOLD=90

# Production Maintenance
AUTO_BACKUP_ENABLED=true
AUTO_BACKUP_SCHEDULE=daily
AUTO_UPDATE_CHECK=false
MAINTENANCE_WINDOW_START=02:00
MAINTENANCE_WINDOW_END=04:00

# Production CDN Configuration (if using CDN)
CDN_ENABLED=false
CDN_URL=
CDN_ASSETS_ONLY=true

# Production Database Optimization
DB_SLOW_QUERY_LOG=true
DB_SLOW_QUERY_TIME=2
DB_MAX_CONNECTIONS=100
DB_QUERY_CACHE_SIZE=64M
DB_INNODB_BUFFER_POOL_SIZE=256M